<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_shape_stroke">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Id:"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txvIdLocalidadeLista"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" 1"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:text="Descrição:"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txvDescricaoLocalidadeLista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Descrição"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:text="Categoria:"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txvCategoriaLocalidadeLista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Categoria"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zona:"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txvZonaLocalidadeLista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Zona"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Extrago:"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txvExtratoLocalidadeLista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Extrago"
                android:textColor="@color/white"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>